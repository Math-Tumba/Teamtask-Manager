{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section>
        <div class="container col-12 col-md-8 col-lg-6 col-xl-4">
            <div class="card card-full">
                <h1>Inscription</h1>
                {{ form_errors(registrationForm) }}
                
                {{ form_start(registrationForm, {
                    'attr': {
                        'data-turbo': 'false',
                        }
                    }) 
                }}
                    {{ form_row(registrationForm.email) }}
                    <div class="row">
                        <div class="col-12 col-md-6">
                            {{ form_row(registrationForm.name, {
                                label: 'Nom'
                            }) }}
                        </div>
                        <div class="col-12 col-md-6">
                            {{ form_row(registrationForm.surname, {
                                label: 'Prénom'
                            }) }}
                        </div>
                    </div>
                    {{ form_row(registrationForm.country, {
                                label: 'Pays'
                            }) }}
                    {{ form_row(registrationForm.username, {
                        label: 'Nom d\'utilisateur'
                    }) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms, {
                        label: 'Accepter la politique de confidentialité'
                    }) }}
                    <button type="submit" class="btn">S'inscrire</button>
                {{ form_end(registrationForm) }}
                
                <p class="text-center">Déjà inscrit ? <a href={{ path('app_login') }} class="bold">Connectez-vous</a></p>
            </div>
        </div>
    </section>
{% endblock %}
