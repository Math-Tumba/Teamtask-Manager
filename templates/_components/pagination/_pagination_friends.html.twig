{% import '_macros/_pagination.html.twig' as macros %}

{% set friends = this.friends %}
{% set componentId = 'friends-pagination' %}

<div id={{ componentId }} {{ attributes }}>
    <div class="accordion-item">
        <h2 class="accordion-header" id="friends-header">
            <button class="accordion-button h2" type="button" data-bs-toggle="collapse" data-bs-target="#friends-body" aria-expanded="true" aria-controls="friends-body">
                Amis ({{ friends.getTotalItemCount }})
            </button>
        </h2>
        <div id="friends-body" class="friends accordion-collapse collapse show" aria-labelledby="friends-header" data-loading="addClass(loading)">
            <div class="accordion-body">
                <div class="row g-3">
                    {% for friend in friends %}
                        <div class="col-12 col-sm-6 col-md-12">
                            <div class="card">
                                <div class="card-body d-flex gap-3">
                                    <div class="infos d-flex gap-4">
                                        <img class="avatar avatar-2" src={{ friend.profilePicture }} alt="">
                                        <div class="text-cut-container">
                                            <a href={{ path('app_profile', { id: friend.id }) }} class="h3 h3-link">{{ friend.username }}</a>
                                            <span class="subtext">{{ friend.country }}</span>
                                        </div>
                                    </div>
                                    <div class="actions d-flex gap-3">
                                        <button class="btn btn-danger remove-friend" type="button" data-related-components={{ componentId }} data-user-id={{ friend.id }}>Supprimer</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <p>Vous n'avez aucun contact pour le moment.</p>
                    {% endfor %}
                    {{ macros.pagination(friends.pageCount, friends.currentPageNumber, 3, 'page') }}
                </div>
            </div>
        </div>
    </div>
</div>