{% import '_macros/_pagination.html.twig' as macros %}

<div id="friend-requests-received-pagination" {{ attributes }}>
    <div class="accordion-item">
        <h2 class="accordion-header" id="friend-requests-received-header">
            <button class="accordion-button h2" type="button" data-bs-toggle="collapse" data-bs-target="#friend-requests-received-body" aria-expanded="true" aria-controls="friend-requests-received-body">
                    Demandes d'ami reçues ({{ this.friendRequests.getTotalItemCount }})
            </button>
        </h2>
        <div id="friend-requests-received-body" class="friends accordion-collapse collapse show" aria-labelledby="friend-requests-received-header" data-loading="addClass(loading)">
            <div class="accordion-body">
                <div class="row g-3">
                    {% for friendRequest in this.friendRequests %}
                        <div class="col-12 col-sm-6 col-md-12">
                            <div class="card">
                                <div class="card-body d-flex gap-3">
                                    <div class="infos d-flex gap-4">
                                        <img class="avatar avatar-2" src={{ friendRequest.profilePicture }} alt="">
                                        <div class="text-cut-container">
                                            <p class="h3">{{ friendRequest.username }}</p>
                                            <span class="subtext">{{ friendRequest.country }}</span>
                                        </div>
                                    </div>
                                    <div class="actions d-flex gap-3">
                                        <button class="btn btn-success accept-friend-request" type="button" data-user-id={{ friendRequest.id }}>Accepter</button>
                                        <button class="btn btn-danger decline-friend-request" type="button" data-user-id={{ friendRequest.id }}>Décliner</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <p>Vous n'avez reçu aucune demande d'ami pour le moment.</p>
                    {% endfor %}
                    {{ macros.pagination(this.friendRequests.pageCount, this.friendRequests.currentPageNumber, 3, 'page_fr_received') }}
                </div>
            </div>
        </div>
    </div>
</div>
